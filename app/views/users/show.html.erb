<div>
  <%= image_tag @user.avatar.url(:thumb) %>
</div>

<h3><%= @user.username %></h3>
<p><%= @user.bio %></p>

<div class="transitions-enabled" id="pins">
  <% @user.pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= link_to (image_tag pin.image.url(:thumb)), pin %>
      <div class="panel-body">
        <h2>
          <%= link_to pin.title, pin %>
        </h2>

        <p><strong><%= link_to pin.user.username, user_path(pin.user.username) %></strong></p>
        <p><%= pin.description %></p>
        <% if pin.user == current_user %>
         <p class="user"></p>
        Submitted by
        <%= pin.user.email %>
          <p></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

